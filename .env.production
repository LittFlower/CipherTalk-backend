# SQLite 生产环境配置示例
# 复制此文件为 .env 并修改相应值

# 数据库配置 - 使用 SQLite
DB_TYPE=sqlite
DB_NAME=chat_app_prod

# 安全配置 - 生产环境请使用更安全的密钥
JWT_SECRET_KEY=your-very-long-and-secure-jwt-secret-key-for-production-use-change-this
SECRET_KEY=another-very-secure-secret-key-for-flask-application-change-this

# 应用模式
DEBUG=false

# CORS 配置 (如果需要)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 可选：日志级别
LOG_LEVEL=INFO
